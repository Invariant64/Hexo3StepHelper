{
    "name": "hexo3stephelper",
    "publisher": "noah-lhc",
    "displayName": "Hexo3StepHelper",
    "description": "A Simple Tool For Hexo",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:updateBlog",
        "onCommand:localDebug"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [{
                "command": "updateBlog",
                "title": "Update Your Blog"
            },
            {
                "command": "localDebug",
                "title": "Debug Web Local"
            }
        ],
        "menus": {
            "editor/context": [{
                    "command": "updateBlog",
                    "when": "editorFocus",
                    "group": "navigation"
                },
                {
                    "command": "localDebug",
                    "when": "editorFocus",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.71.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    }
}